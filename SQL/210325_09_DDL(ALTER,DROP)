-- DDL
-- ALTER : 객체를 수정하는 구문
-- 테이블 객체 수정 : ALTER TABLE 테이블명 수정할 내용;
-- 컬럼 추가/삭제/변경, 제약조건 추가/삭제/변경
-- 테이블명 변경, 제약조건이름변경

-- 컬럼 추가 ADD
SELECT
       DC.*
  FROM DEPT_COPY DC;

ALTER TABLE DEPT_COPY
ADD (LNAME VARCHAR2(20));

SELECT
       DC.*
  FROM DEPT_COPY DC;
  
-- 컬럼 삭제 DROP
ALTER TABLE DEPT_COPY
DROP COLUMN LNAME;
  
SELECT
       DC.*
  FROM DEPT_COPY DC;  
  
-- 컬럼 생성 시 DEFAULT값 지정 ADD DEFAULT
ALTER TABLE DEPT_COPY
ADD (CNAME VARCHAR2(20) DEFAULT '한국');
  
SELECT
       DC.*
  FROM DEPT_COPY DC;   
  
-- 컬럼에 제약조건 추가
CREATE TABLE DEPT_COPY2
AS
SELECT D.*
  FROM DEPARTMENT D;

SELECT
       DC.*
  FROM DEPT_COPY2 DC;

-- DEPT_COPY2 PK(DEPT_ID) PK_DEPT_ID2
-- DEPT_COPY2 UNIQUE -> DEPT_TITLE : UN_DEPT_TITLE2
-- DEPT_COPY

ALTER TABLE DEPT_COPY2
ADD CONSTRAINT PK_DEPT_ID2 PRIMARY KEY(DEPT_ID);
-- 제약조건 이름, 컬럼의 이름

ALTER TABLE DEPT_COPY2
ADD CONSTRAINT UN_DEPT_TITLE2 UNIQUE(DEPT_TITLE);
  
--ALTER TABLE DEPT_COPY2
--MODIFY LOCATION_ID CONSTRAINT NN_LID NOT NULL;
  
-- 컬럼 자료형 수정
ALTER TABLE DEPT_COPY2
MODIFY DEPT_ID CHAR(3)
MODIFY DEPT_TITLE VARCHAR2(30)
MODIFY LOCATION_ID VARCHAR2(2);
  
-- 컬럼의 크기를 줄이는 경우에는
-- 변경하려는 크기를 초과하는 값이 없을 때만 변경 가능. 
ALTER TABLE DEPT_COPY2
MODIFY DEPT_TITLE VARCHAR2(10);
-- cannot decrease column length because some value is too big

SELECT
       DC.*
  FROM DEPT_COPY DC;
  
-- DEFAULT 값 변경
ALTER TABLE DEPT_COPY
MODIFY CNAME DEFAULT '미국';
  
INSERT
  INTO DEPT_COPY
VALUES 
(
  'D0'
, '생산부'
, 'L2'
, DEFAULT
);

-- 생성 시, DEFAULT값(미국)을 그대로 넣어주고 싶은 경우 DEFAULT를 인자로 넣어주면 됨

SELECT
       DC.*
  FROM DEPT_COPY DC;

-- 컬럼삭제
ALTER TABLE DEPT_COPY2
DROP COLUMN DEPT_TITLE;

SELECT
       DC.*
  FROM DEPT_COPY2 DC;

ALTER TABLE DEPT_COPY2
DROP COLUMN LOCATION_ID;

SELECT
       DC.*
  FROM DEPT_COPY2 DC;

ALTER TABLE DEPT_COPY2
DROP COLUMN DEPT_ID;

SELECT
       DC.*
  FROM DEPT_COPY2 DC;
  
-- "cannot drop all columns in a table"
-- 테이블의 모든 컬럼을 다 지울 순 없음. 최소 1개 이상이어야!
-- 지우려는 테이블에 최소 한 개 이상의 컬럼이 남아있어야 한다.

CREATE TABLE TB1(
  PK NUMBER PRIMARY KEY,
  FK NUMBER REFERENCES TB1,
  COL1 NUMBER,
  CHECK(pk > 0 AND COL1 > 0)
);

-- 컬럼 삭제 시 참조하고 있는 컬럼이 있다면 삭제를 못한다.
ALTER TABLE TB1
DROP COLUMN PK;
-- "cannot drop parent key column"

-- 제약조건도 함께 삭제
ALTER TABLE TB1
DROP COLUMN PK CASCADE CONSTRAINT;
-- CONSTRAINTS도 제약조건 사라짐
-- 제약조건 삭제 시 각각 확인하고 삭제해야

-- 컬럼 삭제 : DROP COLUMN 삭제할 컬럼명 또는 DROP(삭제할컬럼명)
-- 데이터가 기록되어 있어도 삭제된다.
-- 삭제된 컬럼은 복구가 불가능
-- 테이블에는 최소 한 개의 컬럼이 존재해야 한다 -> 모든 컬럼 삭제는 불가능
SELECT
       DC.*
  FROM DEPT_COPY DC;
  
ALTER TABLE DEPT_COPY
DROP(CNAME);

ALTER TABLE DEPT_COPY
DROP(DEPT_TITLE, LOCATION_ID);

ROLLBACK;

-- 제약조건 삭제
CREATE TABLE CONST_EMP(
  ENAME VARCHAR2(20) NOT NULL,
  ENO VARCHAR2(15) NOT NULL,
  MARRIAGE CHAR(1) DEFAULT 'N',
  EID CHAR(3),
  EMAIL VARCHAR2(30),
  JID CHAR(2),
  MID CHAR(3),
  DID CHAR(2),
  -- 테이블 레벨로 제약조건 설정
  CONSTRAINT CK_MARRIAGE CHECK(MARRIAGE IN('Y','N')),
  CONSTRAINT PK_EID PRIMARY KEY(EID),
  CONSTRAINT UN_ENO UNIQUE(ENO),
  CONSTRAINT UN_EMAIL UNIQUE(EMAIL),
  CONSTRAINT FK_JID FOREIGN KEY(JID)
  REFERENCES JOB(JOB_CODE) ON DELETE SET NULL,
  CONSTRAINT FK_MID FOREIGN KEY(MID)
  REFERENCES CONST_EMP ON DELETE SET NULL,
  CONSTRAINT FK_DID FOREIGN KEY(DID)
  REFERENCES DEPARTMENT ON DELETE CASCADE
);

-- 제약조건 1개 삭제 시
ALTER TABLE CONST_EMP
DROP CONSTRAINT CK_MARRIAGE;

SELECT * FROM  USER_CONS_COLUMNS
WHERE TABLE_NAME = 'DEPT_COPY3';

SELECT
       UC.
     , UCC.*
  FROM USER_CONSTRAINTS UC
  JOIN USER_CONS_COLUMNS UCC ON(UC.CONSTRAINT_NAME = UCC.CONSTRAINT_NAME)
 WHERE UC.TABLE_NAME = 'USER_NOTNULL';

-- 제약조건 여러 개 삭제 시
ALTER TABLE CONST_EMP
DROP CONSTRAINT FK_DID
DROP CONSTRAINT FK_JID
DROP CONSTRAINT FK_MID;

-- NOT NULL 제약조건 삭제 시 MODIFY 사용
ALTER TABLE CONST_EMP
MODIFY (ENAME NULL, ENO NULL);

-- 컬럼 이름 변경
CREATE TABLE DEPT_COPY3
AS
SELECT * 
  FROM DEPARTMENT;

SELECT
       *
  FROM DEPT_COPY3;

ALTER TABLE DEPT_COPY3
RENAME COLUMN DEPT_ID TO DEPT_CODE;

-- 제약조건 이름 변경
ALTER TABLE DEPT_COPY3
ADD CONSTRAINT PK_DEPT_COPY3 PRIMARY KEY(DEPT_CODe);

ALTER TABLE DEPT_COPY3
RENAME CONSTRAINT PK_DEPT_COPY3 TO PK_DCODE;

SELECT * FROM  USER_CONS_COLUMNS
WHERE TABLE_NAME = 'DEPT_COPY3';

-- 테이블 이름 변경
ALTER TABLE DEPT_COPY3
RENAME TO DEPT_TEST;

SELECT
       DC.*
  FROM DEPT_COPY3 DC;
-- "table or view does not exist"

SELECT
       DT.*
  FROM DEPT_TEST DT;

-- 테이블 삭제 (연결된 제약조건까지도 삭제)
DROP TABLE DEPT_TEST CASCADE CONSTRAINT;





  
  
  
  
  
